                    {{form_errors(registrationForm.passwordCheck)}}<br>
                    {{form_widget(registrationForm.passwordCheck)}}<br>
                    {{form_help(registrationForm.passwordCheck)}}
                </td>
            </tr>
            <tr>
                <td colspan="2"><button type="submit" class="btn">Register</button></td>
            </tr>
        </table>
        <a href="{{path('app_login')}}">Login</a>
        {# {{ form_row(registrationForm.agreeTerms) }} #}
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
