            <caption class="center"><h1>Register</h1></caption>
            <tr>
                <td colspan="1">{{form_label(registrationForm.voornaam)}}</td>
                <td colspan="1">
                    {{form_errors(registrationForm.voornaam)}}<br>
                    {{form_widget(registrationForm.voornaam)}}<br>
                    {{form_help(registrationForm.voornaam)}}
                </td>
            </tr>
            <tr>
                <td colspan="1">{{form_label(registrationForm.achternaam)}}</td>
                <td colspan="1">
                    {{form_errors(registrationForm.achternaam)}}<br>
                    {{form_widget(registrationForm.achternaam)}}<br>
                    {{form_help(registrationForm.achternaam)}}
                </td>
            </tr>
            <tr>
                <td colspan="1">{{form_label(registrationForm.straat)}}&nbsp;&nbsp;</td>
                <td colspan="1">
                    {{form_errors(registrationForm.straat)}}<br>
                    {{form_widget(registrationForm.straat)}}<br>
                    {{form_help(registrationForm.straat)}}
                </td>
            </tr>
            <tr>
                <td colspan="1">{{form_label(registrationForm.postcode)}}&nbsp;&nbsp;</td>
                <td colspan="1">
                    {{form_errors(registrationForm.postcode)}}<br>
                    {{form_widget(registrationForm.postcode)}}<br>
                    {{form_help(registrationForm.postcode)}}
                </td>
            </tr>
            <tr>
                <td colspan="1">{{form_label(registrationForm.woonplaats)}}&nbsp;&nbsp;</td>
                <td colspan="1">
                    {{form_errors(registrationForm.woonplaats)}}<br>
                    {{form_widget(registrationForm.woonplaats)}}<br>
